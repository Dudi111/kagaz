<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_vector"
            android:text="Create Account"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:padding="20dp"
            android:background="#0583EA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alma.lawson@example.com"
            android:textSize="20sp"
            android:padding="40dp"
            android:drawableBottom="@drawable/ic_line_1__2_"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane Cooper"
            android:textSize="20sp"
            android:padding="40dp"
            android:drawableBottom="@drawable/ic_line_1__2_"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password(min.6 character)"
            android:textSize="20sp"
            android:padding="40dp"
            android:drawableBottom="@drawable/ic_line_1__2_"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use phone number"
            android:textSize="20sp"
            android:textColor="#0583EA"
            android:padding="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/ic_rectangle_17"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="continue with facebook"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_rectangle_15"
            android:drawableStart="@drawable/ic_vector__7_"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with google"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/ic_rectangle_16"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_flat_color_icons_google"
            android:layout_gravity="center"
            />







    </LinearLayout>



</ScrollView>